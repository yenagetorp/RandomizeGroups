@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model RandomizeGroups.Models.ViewModels.EmployeesRandomizeVM
@{
    ViewData["Title"] = "Index";
}
<!DOCTYPE html>
<html>
<head>
    <title> </title>
    <link rel="stylesheet" href="https://bootswatch.com/4/slate/bootstrap.css">

</head>
<body>
  
     
    <form asp-controller="RandomizeGroups" asp-action="Randomize" method="get">
        <label asp-for="Num_Groups">Number of Groups</label>
        <input asp-for="Num_Groups" name="num_groups" /> @*type="number" min="1" max="50"*@
        <input type="submit" value="Randomize" />
    </form>

    <div class="card mb-3">
        <h3 class="card-header">Group </h3>
        <ul class="list-group list-group-flush">
            @for (int i = 0; i < Model.employees.Count; i++)
            {
                <li>
                    <h3>Group @(i + 1)</h3>
                    <ul>
                        @foreach (var employee in Model.employees[i])
                        {
                            <li>@employee</li>
                        }
                    </ul>
                </li>
            }

        </ul>
    </div>
</body>
</html>

